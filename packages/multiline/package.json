{
  "name": "@cli-prompts/multiline",
  "version": "1.0.0",
  "description": "A production-ready multiline text prompt for Node.js CLIs. Flicker-free, smooth, and supports full cursor movement with rich ANSI rendering. Built to fill the gap the other great libraries never covered.",
  "author": {
    "name": "PRASSamin",
    "url": "https://github.com/PRASSamin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PRASSamin/cli-prompts.git"
  },
  "homepage": "https://github.com/PRASSamin/cli-prompts",
  "bugs": {
    "url": "https://github.com/PRASSamin/cli-prompts/issues",
    "email": "prassamin@gmail.com"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/**/*",
    "package.json",
    "LICENSE.md",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "keywords": [
    "cli",
    "prompt",
    "multiline",
    "multiline-input",
    "cli-input",
    "terminal",
    "ansi",
    "inquirer",
    "enquirer",
    "interactive",
    "nodejs",
    "command-line",
    "chalk",
    "tty",
    "bracketed-paste",
    "text-editor",
    "input",
    "cli-toolkit",
    "cli-framework"
  ],
  "scripts": {
    "dev": "tsx examples/index.ts",
    "build": "tsup"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "ansi-escapes": "^7.2.0"
  }
}
